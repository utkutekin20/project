{
  "name": "ucler-yangin-takip",
  "version": "1.0.0",
  "description": "Üçler Yangın - Yangın Tüpü Takip Programı",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Üçler Yangın",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@fullcalendar/core": "^6.1.10",
    "@fullcalendar/daygrid": "^6.1.10",
    "@fullcalendar/interaction": "^6.1.10",
    "@fullcalendar/react": "^6.1.10",
    "@fullcalendar/timegrid": "^6.1.10",
    "@hello-pangea/dnd": "^17.0.0",
    "@iconify-json/solar": "^1.2.0",
    "@phosphor-icons/react": "^2.1.7",
    "@popperjs/core": "^2.11.8",
    "@ramonak/react-progress-bar": "^5.2.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "animate.css": "^4.1.1",
    "apexcharts": "^4.3.0",
    "better-sqlite3": "^9.2.2",
    "bootstrap": "^5.3.3",
    "datatables.net": "^2.1.8",
    "datatables.net-dt": "^2.1.8",
    "electron-updater": "^6.7.3",
    "flatpickr": "^4.6.13",
    "highlight.js": "^11.10.0",
    "isotope-layout": "^3.0.6",
    "jquery": "^3.7.1",
    "jsvectormap": "1.3.1",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-apexcharts": "^1.7.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-bootstrap": "^2.10.5",
    "react-datepicker": "^7.4.0",
    "react-dom": "^18.2.0",
    "react-fast-marquee": "^1.6.5",
    "react-modal-video": "^2.0.2",
    "react-quill": "^2.0.0",
    "react-quill-new": "^3.3.3",
    "react-router-dom": "^6.22.1",
    "react-scripts": "5.0.1",
    "react-scroll-to-top": "^3.0.0",
    "react-slick": "^0.30.2",
    "react-slider": "^2.0.6",
    "react-toastify": "^10.0.5",
    "slick-carousel": "^1.8.1",
    "uuid": "^10.0.0",
    "web-vitals": "^2.1.4",
    "wowjs": "^1.1.3",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && electron-builder --win",
    "dist:setup": "npm run build && electron-builder --win nsis",
    "dist:portable": "npm run build && electron-builder --win portable",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@iconify/react": "^5.0.2",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "png-to-ico": "^3.0.1",
    "sass": "^1.71.1",
    "wait-on": "^7.2.0",
    "webpack": "^5.90.3"
  },
  "build": {
    "appId": "com.ucleryangin.takip",
    "productName": "Üçler Yangın Takip",
    "copyright": "Copyright © 2026 Üçler Yangın",
    "icon": "build/icon.ico",
    "publish": [
      {
        "provider": "github",
        "owner": "utkutekin20",
        "repo": "project"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/assets/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Üçler Yangın Takip",
      "installerLanguages": [
        "tr_TR",
        "en_US"
      ],
      "language": "1055"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}
